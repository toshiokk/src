echo "Converting .fnt to .hex ..."

ls -ls *.fnt*

tx2hx()
{
  if [ -f $2 ]; then
    if [ `date -r $1 +%s` -gt `date -r $2 +%s` ]; then
       rm -f $2
    fi
  fi
  if [ ! -f $2 ]; then
    echo "converting font-file: $1 to $2 ..."
    ./txt2hex txt2hex <$1 >$2
  fi
}

tx2hx ucon10.fnt ucon10.hex
tx2hx ucon12.fnt ucon12.hex
tx2hx ucon14.fnt ucon14.hex
tx2hx ucon16.fnt ucon16.hex
